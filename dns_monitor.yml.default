---
name: dns::monitor
log_cfg: ./conf/logging.conf
rrd:
  dir: ./cache/rrd

db:
  dsn: dbi:SQLite:./cache/db/dnsmonitor.db
  user:
  pass:

pcap:
  dev: any
  snaplen: 1518
  timeout: 100
  filter: udp and port 53
  promisc: 0

plugins:
  server::stats:
    enabled: 1
    rrd: 1

  server::authorized:
    enable: 1
    authorized:
      - 8.8.8.8
      - 8.8.4.4
