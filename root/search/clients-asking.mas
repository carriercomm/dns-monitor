<%args>
	$query
	$question
	$results
</%args>
<h2>Results for '<% $query %>'</h2>
% if( defined $question ) {
<h3><% $question->class %> <% $question->type %> <% $question->name %></h3>
<div class="prepend-1 span-15 last">
		Query been asked <strong><% $question->reference_count %></strong> times
		between <strong><% $question->first_ts->strftime('%F %H:%M') %></strong>
		and <strong><% $question->last_ts->strftime('%F %H:%M') %></strong>.
</div>
<hr class="space">
%	if( defined $results ) {
<table id="results" class="display">
<thead>
  <tr>
	<th>client</th>
	<th>first</th>
	<th>last</th>
	<th>count</th>
  </tr>
</thead>
<tbody>
% foreach my $entry ( @{ $results } ) {
  <tr>
	<td><% $entry->{client} %></td>
	<td><% $entry->{first} %></td>
	<td><% $entry->{last} %></td>
	<td><% $entry->{count} %></td>
  </tr>
% } # end foreach rec
</tbody>
</table>
<script type="text/javascript">
	$(document).ready(function() {
		$('#results').dataTable({
			'bJQueryUI': true,
			'iDisplayLength': 25,
			'aaSorting': [ [ 3, 'desc' ] ]
		});
	});
</script>
% 	} # End if RESULTS
% } else {
<h3>No results for '<% $query %>'.</h3>
% }
<%method title>search results : clients asking</%method>
