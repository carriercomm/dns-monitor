			{ title => 'server stats', url => '/server/stats' },
			{ title => 'client stats', url => '/client/stats' },
		],
	},
	{
		title => 'performance',
		url	  => '/perf/',
		items => [
			{ title => 'sniffer', url => '/perf/sniffer' },
		],
	},
	{
		title	=> 'utilities',
		url		=> '/utility',
		items	=> [
			{ title => 'fake reverse', url => '/utility/reverse' },
			{ title => 'query page (beta)', url => '/query/' },
			{ title => 'search', url => \q{javascript:showSearch('query-asked',null);}, },
		],
	},
);

</%init>

